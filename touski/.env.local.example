NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8055

# Optional: if using static token for server-to-server calls
# DIRECTUS_STATIC_TOKEN=your_static_token

# CJ Dropshipping API (configurable)
# Set CJ_MOCK=1 to use mock data without hitting CJ API
# CJ_MOCK=1
# CJ_BASE_URL=https://openapi.cjdropshipping.com
# CJ_TOKEN_URL=https://openapi.cjdropshipping.com/auth/token
# CJ_STATIC_TOKEN=your_access_token   # si vous avez déjà un token CJ
# CJ_CLIENT_ID=your_client_id
# CJ_CLIENT_SECRET=your_client_secret
# CJ_PRODUCTS_PATH=/product/list
# CJ_TOKEN_HEADER=CJ-Access-Token
# CJ_TOKEN_PREFIX=Bearer            # si CJ attend Authorization: Bearer <token>
# CJ_Q_PARAM=keyword
# # Si l'API attend 'keyWord' (sensible à la casse):
# CJ_Q_PARAM=keyWord
# CJ_PAGE_PARAM=pageNum
# CJ_SIZE_PARAM=pageSize
# CJ_CATEGORY_PARAM=category
# CJ_MIN_PRICE_PARAM=minPrice
# CJ_MAX_PRICE_PARAM=maxPrice
# CJ_SORT_PARAM=sort
# CJ_USE_POST=0                     # mettre 1 si l'endpoint CJ exige POST JSON
# CJ_EXTRA={"country":"FR","language":"FR"}  # paramètres supplémentaires inclus dans la requête
